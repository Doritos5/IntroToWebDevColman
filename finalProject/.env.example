# MongoDB Connection
# Default: mongodb://127.0.0.1:27017/streamix
MONGODB_URI=mongodb://127.0.0.1:27017/streamix

# Session Secret (REQUIRED)
# Generate a secure random string for production
# Example: run `node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"`
SESSION_SECRET=your-secure-secret-here-please-change-this

# Server Configuration
# Port for the Express server
PORT=5555

# Environment (development/production)
NODE_ENV=development

# Videos Per Page
# Number of items to display per page in catalog
ITEMS_PER_PAGE=10

# OMDb API Key (Optional)
# Used for fetching IMDb ratings when adding new content
# If not provided, videos will default to rating 0
OMDB_API_KEY=
