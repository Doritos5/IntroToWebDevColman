<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Settings - Profile Management</title>
    <link rel="stylesheet" href="/settings/settings.css">
</head>
<body>
<div class="settings-container">
        <% if (user && user.role === 'admin') { %>
            <div class="top-actions">
                <a href="/add-content" class="btn btn-danger btn-action" aria-label="Add new content">Add Content</a>
            </div>
        <% } %>
    <h2>Add New Profile</h2>

    <form id="add-profile-form" class="settings-form">
        <label for="profileName">Profile Name</label>
        <input type="text" class="form-control" id="profileName" placeholder="Profile Name" required>
        <button type="submit" class="btn btn-danger">Add Profile</button>
    </form>

    <h2 class="manage-title">Manage Existing Profiles</h2>

    <ul id="profiles-list" class="profiles-list">
        <% if (profiles && profiles.length > 0) { %>
            <% profiles.forEach(profile => { %>
                <li class="profile-item" data-profile-id="<%= profile.id %>">
                    <span class="profile-name"><%= profile.displayName %></span>
                    <input type="text" class="profile-edit-input"
                           value="<%= profile.displayName %>" style="display:none;">
                    <div class="profile-buttons">
                        <button class="btn btn-secondary btn-sm btn-edit-profile" aria-label="Edit name">
                            <!-- icon -->
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                 fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V12h2.293z"/>
                            </svg>
                        </button>

                        <button class="btn btn-danger btn-sm btn-delete-profile" data-profile-id="<%= profile.id %>">
                            Delete
                        </button>
                    </div>
                </li>
            <% }) %>
        <% } else { %>
            <li class="profile-item-empty">No Profiles to display.</li>
        <% } %>
    </ul>

    <div id="message-container"></div>
    <a href="/profiles_page" class="btn btn-secondary">Back to profiles</a>
</div>

<script src="/settings/settings.js"></script>
</body>
</html>
