<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Analytics</title>

    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>

    <style>
        body {
            margin: 0;
            background-color: #000;
            color: #fff;
            font-family: Arial, sans-serif;
        }

        .analytics-container {
            max-width: 1100px;
            margin: 0 auto;
            padding: 80px 24px 40px;
        }

        h1 {
            color: #e50914;
            font-size: 2.4rem;
            margin: 0 0 8px;
        }

        .subtitle {
            font-size: 0.95rem;
            color: #bbbbbb;
            margin-bottom: 32px;
        }

        h2 {
            font-size: 1.25rem;
            margin: 32px 0 12px;
        }

        .chart-box {
            background-color: #111;
            border-radius: 14px;
            padding: 16px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.8);
            margin-bottom: 32px;
        }

        .chart-box canvas {
            width: 100% !important;
            height: 320px !important;
        }

        .note {
            font-size: 0.8rem;
            color: #888;
            margin-top: 4px;
        }
    </style>
</head>

<body class="navbar-page">
<main class="analytics-container">
    <h1>Analytics</h1>
    <div class="subtitle">
        Viewing activity and content performance overview.
    </div>

    <section>
        <h2>Daily Views per Profile (Last 7 Days)</h2>
        <div class="chart-box">
            <canvas id="dailyViewsChart"></canvas>
            <div class="note">
                Each color represents a profile. Days without data are shown as 0 views.
            </div>
        </div>
    </section>

    <section>
        <h2>Content Popularity by Genre (Last 90 Days)</h2>
        <div class="chart-box">
            <canvas id="genreChart"></canvas>
            <div class="note">
                Based on completed viewing sessions by genre.
            </div>
        </div>
    </section>
</main>

<script>
    const dailyViewsLabels   = <%- JSON.stringify(dailyViewsLabels   || []) %>;
    const dailyViewsDatasets = <%- JSON.stringify(dailyViewsDatasets || []) %>;
    const genreLabels        = <%- JSON.stringify(genreLabels        || []) %>;
    const genreData          = <%- JSON.stringify(genreData          || []) %>;

    const barColors = ['#e50914', '#46d369', '#3b82f6', '#facc15', '#a855f7', '#22c55e'];

    // Daily views chart
    const dailyCtx = document.getElementById('dailyViewsChart');

    const preparedDatasets = (dailyViewsDatasets || []).map((ds, index) => ({
        label: ds.label,
        data: ds.data,
        backgroundColor: barColors[index % barColors.length]
    }));

    new Chart(dailyCtx, {
        type: 'bar',
        data: {
            labels: dailyViewsLabels,
            datasets: preparedDatasets
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    labels: {
                        color: '#ffffff',
                        font: { size: 11 }
                    }
                }
            },
            scales: {
                x: {
                    ticks: { color: '#ffffff' },
                    grid: { color: 'rgba(255,255,255,0.08)' }
                },
                y: {
                    ticks: { color: '#ffffff', precision: 0 },
                    grid: { color: 'rgba(255,255,255,0.15)' }
                }
            }
        }
    });

    // Genre popularity chart
    const genreCtx = document.getElementById('genreChart');

    const genreColors = genreLabels.map((_, i) => barColors[i % barColors.length]);

    new Chart(genreCtx, {
        type: 'doughnut',
        data: {
            labels: genreLabels,
            datasets: [{
                data: genreData,
                backgroundColor: genreColors
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            cutout: '55%',
            plugins: {
                legend: {
                    position: 'top',
                    labels: {
                        color: '#ffffff',
                        font: { size: 11 }
                    }
                }
            }
        }
    });
</script>
</body>
</html>
